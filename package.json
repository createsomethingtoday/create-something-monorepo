{
  "name": "@create-something/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Hermeneutic ecosystem for AI-native development research and practice",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @createsomething/components dev",
    "dev:all": "pnpm --parallel -r dev",
    "dev:components": "pnpm --filter @createsomething/components dev",
    "dev:ltd": "pnpm --filter @create-something/ltd dev",
    "dev:io": "pnpm --filter @create-something/io dev",
    "dev:space": "pnpm --filter @create-something/space dev",
    "dev:agency": "pnpm --filter @create-something/agency dev",
    "build": "pnpm --filter @createsomething/components package && pnpm --parallel -r build",
    "build:lib": "pnpm --filter @createsomething/components package",
    "build:ltd": "pnpm --filter @create-something/ltd build",
    "build:io": "pnpm --filter @create-something/io build",
    "build:space": "pnpm --filter @create-something/space build",
    "build:agency": "pnpm --filter @create-something/agency build",
    "check": "pnpm --recursive run check",
    "lint": "pnpm --recursive run lint",
    "format": "prettier --write \"packages/**/*.{js,ts,svelte,json,css,md}\"",
    "test": "pnpm --recursive run test",
    "graph:build": "tsx scripts/build-knowledge-graph/index.ts",
    "graph:build:incremental": "tsx scripts/build-knowledge-graph/index.ts --incremental",
    "graph:build:dry-run": "tsx scripts/build-knowledge-graph/index.ts --dry-run",
    "graph:analyze": "tsx scripts/build-knowledge-graph/analyze.ts",
    "graph:analyze:create": "tsx scripts/build-knowledge-graph/analyze.ts --create",
    "exports": "tsx scripts/list-exports.ts",
    "harness": "pnpm --filter @create-something/harness harness",
    "harness:start": "pnpm --filter @create-something/harness harness start",
    "harness:status": "pnpm --filter @create-something/harness harness status",
    "harness:resume": "pnpm --filter @create-something/harness harness resume",
    "ui": "./scripts/ui-preview.sh",
    "ui:start": "./scripts/ui-preview.sh start",
    "ui:stop": "./scripts/ui-preview.sh stop",
    "ui:status": "./scripts/ui-preview.sh status",
    "ui:viewer": "pnpm --filter @create-something/ui-viewer dev",
    "ui:bridge": "cd packages/ui-bridge && bun run dev",
    "ui:diff:build": "cd packages/ui-diff && wasm-pack build --target web --out-dir ../ui-bridge/wasm"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@mizchi/lsmcp": "^0.10.0",
    "@typescript-eslint/parser": "^8.50.1",
    "glob": "^13.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "undici": ">=7.18.2"
    }
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.4",
    "puppeteer-core": "^24.34.0"
  }
}