{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "outerfields-pcn",
	"compatibility_date": "2025-01-01",
	"pages_build_output_dir": ".svelte-kit/cloudflare",

	// Set ANTHROPIC_API_KEY as a secret:
	// wrangler secret put ANTHROPIC_API_KEY --env production
	// The demo will use fallback responses if not configured.

	"vars": {
		"ENVIRONMENT": "production"
	},

	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "outerfields-db",
			"database_id": "placeholder-replace-after-creation"
		}
	],

	"kv_namespaces": [
		{
			"binding": "SESSIONS",
			"id": "placeholder-replace-after-creation"
		},
		{
			"binding": "VIDEO_STATS",
			"id": "55a1177ee7c3491589c19094e38df0f7"
		}
	],

	"r2_buckets": [
		{
			"binding": "VIDEO_ASSETS",
			"bucket_name": "outerfields-videos"
		}
	],

	"ai": {
		"binding": "AI"
	}
}
