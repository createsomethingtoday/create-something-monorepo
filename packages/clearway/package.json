{
  "name": "@create-something/clearway",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:embed": "BUILD_EMBED=true vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "pnpm build && pnpm build:embed && wrangler pages deploy .svelte-kit/cloudflare --project-name=clearway",
    "db:migrate": "wrangler d1 migrations apply clearway-db",
    "db:migrate:local": "wrangler d1 migrations apply clearway-db --local",
    "types": "wrangler types"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@sveltejs/adapter-cloudflare": "^6.0.0",
    "@sveltejs/kit": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitest": "^2.1.8",
    "wrangler": "^4.59.0"
  },
  "dependencies": {
    "@create-something/components": "workspace:*",
    "@workwayco/sdk": "link:../../../../../WORKWAY/Cloudflare/packages/sdk",
    "stripe": "^17.5.0"
  },
  "type": "module"
}
