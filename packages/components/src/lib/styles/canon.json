        "h3": { "value": "clamp(1.125rem, 1vw + 0.5rem, 1.25rem)" },
        "h4": { "value": "clamp(1rem, 0.5vw + 0.5rem, 1.125rem)" },
        "h5": { "value": "1rem" },
        "h6": { "value": "0.875rem" }
