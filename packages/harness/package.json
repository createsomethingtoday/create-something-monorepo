{
  "name": "@create-something/harness",
  "version": "0.1.0",
  "description": "Autonomous agent harness with Beads-based human oversight. Runs Claude Code sessions in a loop with progress reports and reactive redirection.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "harness": "./dist/cli.js",
    "gt-smart-sling": "./bin/gt-smart-sling"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/cli.js",
    "harness": "node dist/cli.js"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "claude-code",
    "harness",
    "agents",
    "beads",
    "automation"
  ],
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "yaml": "^2.8.2"
  }
}
