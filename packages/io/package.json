{
	"name": "@create-something/io",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "pnpm lint && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"deploy": "pnpm build && wrangler pages deploy .svelte-kit/cloudflare --project-name=create-something-io",
		"deploy:preview": "pnpm build && wrangler pages deploy .svelte-kit/cloudflare --project-name=create-something-io --branch=preview",
		"cf-typegen": "wrangler types"
	},
	"dependencies": {
		"@create-something/components": "workspace:*",
		"@create-something/render-pipeline": "workspace:*",
		"@create-something/spritz": "workspace:*",
		"@create-something/tufte": "workspace:*",
		"@types/canvas-confetti": "^1.9.0",
		"canvas-confetti": "^1.9.4",
		"cytoscape": "^3.33.1",
		"cytoscape-cose-bilkent": "^4.1.0",
		"html2canvas": "^1.4.1",
		"lucide-svelte": "^0.554.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251128.0",
		"@create-something/eslint-plugin-canon": "workspace:*",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/cytoscape": "^3.31.0",
		"@types/node": "^24.10.1",
		"@webgpu/types": "^0.1.69",
		"autoprefixer": "^10.4.22",
		"eslint": "^9.17.0",
		"highlight.js": "^11.11.1",
		"marked": "^17.0.0",
		"mdsvex": "^0.12.6",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"svelte-eslint-parser": "^0.43.0",
		"tailwindcss": "^3.4.18",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"wrangler": "^4.59.0"
	}
}
