{
	"name": "@create-something/space",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm build && wrangler pages deploy .svelte-kit/cloudflare --project-name=create-something-space",
		"deploy:preview": "pnpm build && wrangler pages deploy .svelte-kit/cloudflare --project-name=create-something-space --branch=preview",
		"cf-typegen": "wrangler types",
		"migrate:papers": "tsx scripts/migrate-papers.ts",
		"migrate:papers:prod": "MIGRATION_URL=https://createsomething.space/api/migrate/sync-papers tsx scripts/migrate-papers.ts"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251128.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/d3-force": "^3.0.10",
		"@types/d3-selection": "^3.0.11",
		"@types/node": "^24.10.1",
		"autoprefixer": "^10.4.22",
		"highlight.js": "^11.11.1",
		"marked": "^17.0.0",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^3.4.18",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vite-plugin-top-level-await": "^1.6.0",
		"vite-plugin-wasm": "^3.5.0",
		"wrangler": "^4.51.0"
	},
	"dependencies": {
		"@cloudflare/sandbox": "^0.4.18",
		"@codemirror/autocomplete": "^6.19.1",
		"@codemirror/commands": "^6.10.0",
		"@codemirror/lang-javascript": "^6.2.4",
		"@codemirror/language": "^6.11.3",
		"@codemirror/state": "^6.5.2",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.38.7",
		"@create-something/components": "workspace:*",
		"@create-something/tufte": "workspace:*",
		"@resvg/resvg-wasm": "^2.6.2",
		"codemirror": "^6.0.2",
		"d3-force": "^3.0.0",
		"d3-selection": "^3.0.0",
		"lucide-svelte": "^0.562.0"
	}
}
