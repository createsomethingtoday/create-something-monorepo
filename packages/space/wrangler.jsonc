{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "create-something-space",
	"compatibility_date": "2025-11-15",
	"compatibility_flags": ["nodejs_compat"],
	"pages_build_output_dir": ".svelte-kit/cloudflare",

	"dev": {
		"port": 3001
	},

	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "create-something-db",
			"database_id": "a74e70ae-6a94-43da-905e-b90719c8dfd2"
		}
	],

	"kv_namespaces": [
		{
			"binding": "SESSIONS",
			"id": "973b18397c4d4b068313152a642f1ad5"
		},
		{
			"binding": "CACHE",
			"id": "bcb39a6258fe49b79da9dc9b09440934"
		},
		{
			"binding": "CIRCLE_DATA",
			"id": "f8cdafbe08954630abef1266d437ce77"
		}
	],

	"r2_buckets": [
		{
			"binding": "STORAGE",
			"bucket_name": "create-something-assets"
		}
	],

	// Browser Rendering uses REST API with CF_ACCOUNT_ID and CF_API_TOKEN secrets
	// instead of the browser binding (which doesn't work with SvelteKit Pages adapter)

	"ai": {
		"binding": "AI"
	},

	"vars": {
		"ENVIRONMENT": "production",
		"TERMINAL_VERSION": "2.0.0",
		"DEFAULT_THEME": "dark"
	}
}
