{
	"name": "@create-something/spritz",
	"version": "1.0.0",
	"description": "RSVP speed reading component with Optimal Recognition Point highlighting - for video intros, transitions, and interactive documentation",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit sync && svelte-package && publint",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./vanilla": {
			"types": "./dist/vanilla/index.d.ts",
			"default": "./dist/vanilla/index.js"
		},
		"./styles/spritz.css": "./dist/styles/spritz.css"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"@sveltejs/kit": {
			"optional": true
		},
		"svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"@create-something/canon": "workspace:^",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"publint": "^0.3.14",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"keywords": [
		"svelte",
		"speed-reading",
		"rsvp",
		"spritz",
		"orp",
		"accessibility",
		"video",
		"documentation"
	]
}
