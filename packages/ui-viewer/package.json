{
  "name": "@create-something/ui-viewer",
  "version": "0.1.0",
  "description": "Visual preview for UI components. Animates changes streamed from ui-bridge.",
  "type": "module",
  "bin": {
    "ui": "./cli/index.ts"
  },
  "scripts": {
    "dev": "vite dev --port 4200",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "cli": "bun run cli/index.ts"
  },
  "dependencies": {
    "@create-something/components": "workspace:^",
    "lucide-svelte": "^0.468.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "svelte": "^5.41.0",
    "svelte-check": "^4.3.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  }
}
