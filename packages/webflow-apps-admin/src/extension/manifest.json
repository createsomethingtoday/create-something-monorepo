{
  "manifest_version": 3,
  "name": "Webflow Apps Admin",
  "version": "1.0.0",
  "description": "Tools for Webflow Apps Marketplace administration",
  "author": "CREATE SOMETHING",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://webflow.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://webflow.com/apps*"],
      "js": ["content/apps-page.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
